<div id="docs">
<% unless @docs.blank? %>
  <% @docs.each do |doc| %>
    <div id="doc">
      <h2 class="doc_title">
        <%= link_to doc.title, doc %>
      </h2>
      <div class="doc_details">
        <p class="doc_summary">
          <%= truncate(doc.content, length: 40) %>
        </p>

        <p class="doc_timestamp">
          ( <%= time_ago_in_words(doc.created_at) %> ago )
        </p>
      </div>
    </div>
  <% end %>

<% else %>
  <h2>Create Doc!</h2>
  <p>Start Creating Documents and Organizing your life!</p>
<% end %>

  <div class="button marg_btn">
    <%= link_to "Create Doc", new_doc_path %>
  </div>

</div>