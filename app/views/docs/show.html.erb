<div id="doc">
  <h1>
    <%= @doc.title %>
  </h1>

  <hr style="width: 550px">

  <div class="doc_content">
    <%= simple_format(@doc.content) %>
  </div>

  <div class="doc_actions">
    <div class="button marg_btn">
      <%= link_to "Fix Doc", edit_doc_path(@doc) %>
    </div>
    <div class="button marg_btn">
      <%= link_to "Trash it", doc_path(@doc), method: :delete, data: { confirm: 'You sure?' } %>
    </div>
  </div>

</div>